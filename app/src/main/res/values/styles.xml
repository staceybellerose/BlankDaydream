<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="AppThemeMobile" parent="AppThemeBase" />

    <style name="AppThemeMobile.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeMobile.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeLeanbackBase" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/md_primary_text_dark</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <style name="AppThemeLeanback" parent="AppThemeLeanbackBase" />

    <style name="TextAppearance" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.FabText" parent="Widget.AppCompat.Button">
        <!--
        <item name="android:textColor">@color/md_primary_text_light</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@android:color/white</item>
        -->
    </style>
</resources>
